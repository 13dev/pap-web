{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
    	<div class="col-md-6 col-md-offset-3">
    		<div class="panel panel-default">
    			<div class="panel-heading">
    				Sign Up
    			</div>
    			<div class="panel-body">
    				<form action="{{ path_for('auth.signup') }}" method="post">
	    				<div class="form-group {{ validationErrors.name ? 'has-error' : '' }}">
	    					<label for="name">Name:</label>
	    					<input type="text" name="name" id="name" class="form-control" />
	    					{% if validationErrors.name %}
	    						<span class="help-block">{{ validationErrors.name | first }}</span>
	    					{% endif %}
	    				</div>
	    				<div class="form-group {{ validationErrors.email ? 'has-error' : '' }}">
	    					<label for="email">Email:</label>
	    					<input type="text" name="email" id="email" class="form-control" />
	    					{% if validationErrors.email %}
	    						<span class="help-block">{{ validationErrors.email | first }}</span>
	    					{% endif %}
	    				</div>
	    				<div class="form-group {{ validationErrors.password ? 'has-error' : '' }}">
	    					<label for="password">Password:</label>
	    					<input type="password" name="password" id="password" class="form-control" />
	    					{% if validationErrors.password %}
	    						<span class="help-block">{{ validationErrors.password | first }}</span>
	    					{% endif %}
	    				</div>
	    				<button class="btn btn-primary" type="submit">Sign Up</button>
    				</form>
    			</div>
    		</div>
    	</div>
    </div>
{% endblock %}