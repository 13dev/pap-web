{% extends 'templates/app.twig' %}
{% block content %}
    <div class="row">
    	<div class="col-md-6 col-md-offset-3">
    		<div class="panel panel-primary">
    			<div class="panel-heading">
    				Change Password
    			</div>
    			<div class="panel-body">
    				<form action="{{ path_for('auth.password.change') }}" method="post">
	    				<div class="form-group {{ validationErrors.password_old ? 'has-error has-feedback' : '' }}">
	    					<label for="password_old">Current Password:</label>
	    					<input type="password" name="password_old" id="password_old" class="form-control" />
                            {% if validationErrors.password_old %}
                                <span class="help-block">{{ validationErrors.password_old | first }}</span>
                                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                            {% endif %}
	    				</div>
	    				<div class="form-group {{ validationErrors.password ? 'has-error has-feedback' : '' }}">
	    					<label for="password">Password:</label>
	    					<input type="password" name="password" id="password" class="form-control" />
                            {% if validationErrors.password %}
                                <span class="help-block">{{ validationErrors.password | first }}</span>
                                <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                            {% endif %}
	    				</div>
	    				<button class="btn btn-primary right" type="submit">Change Password</button>
	    				{{ csrf.field | raw }}
    				</form>
    			</div>
    		</div>
    	</div>
    </div>
{% endblock %}